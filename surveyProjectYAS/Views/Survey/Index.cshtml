@model Question

@if (Context.Request.Cookies["HasVoted"] != null)
{
    <script>window.location.href = "/Survey/Results";</script>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(135deg, #fdfbfb, #ebedee);">
        <div class="card p-5 shadow-lg border-0 rounded-4" style="width: 100%; max-width: 500px;">
            <h2 class="text-center mb-4 fw-bold">@Model.Text</h2>

            <form asp-action="Vote" method="post">
                @foreach (var option in Model.Options)
                {
                    <div class="form-check mb-2 hover-scale">
                        <input class="form-check-input" type="radio" name="optionId" value="@option.Id" required />
                        <label class="form-check-label">@option.Text</label>
                    </div>
                }
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">🗳️ Oy Ver</button>
                </div>
            </form>

        </div>
    </div>

    <style>
        .hover-scale:hover {
            transform: scale(1.02);
            transition: 0.2s ease-in-out;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
        }
    </style>
}
